{
    "manifest_version": 3,
    "name": "NetFlow AI - Video Generator",
    "version": "1.0.0",
    "description": "Generate AI videos directly from your sidebar.",
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker-loader.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-loader.js"
            ],
            "css": [
                "assets/index.css"
            ]
        }
    ],
    "action": {
        "default_title": "Open NetFlow AI"
    },
    "icons": {
        "16": "placeholder.svg",
        "48": "placeholder.svg",
        "128": "placeholder.svg"
    }
}